{%- assign product_list = section.settings.product_list -%}

<section class="my-10">
    <ul class="flex flex-wrap justify-center align-middle">
        {%- for product in product_list -%}
          <li>
            {%- render 'card-product-task', card_product: product, section_id: section.id -%}
          </li>
        {%- endfor -%}
    </ul>
</section>

{% schema %}
{
  "name": "Cards Sample",
  "settings": [
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Products"
    }
  ],
  "presets": [
    {
      "name": "Cards Sample"
    }
  ]
}
{% endschema %}
